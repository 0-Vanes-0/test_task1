<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8sp"
    app:cardCornerRadius="12sp"
    app:contentPadding="16sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/imageViewRoom"
                android:layout_width="480sp"
                android:layout_height="280sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/roomNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/roomPicsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="чота там"
            android:textColor="#828796"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/minimalPriceRoomText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="от 999"
                android:textSize="36sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1" />

            <TextView
                android:id="@+id/forWhatRoomText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="за 5 ночей с Фредди"
                android:textColor="#828796" />
        </LinearLayout>

        <Button
            android:id="@+id/submitRoomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбрать номер" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
